import random
a = random.randint(0, 9)
b = random.randint(0, 9)
c = random.randint(0, 9)
print(a, b, c)
print()
a = random.randint(1, 6)
b = random.randint(1, 6)
c = random.randint(1, 6)
d = random.randint(1, 6)
print(a, b, c, d)

OR

import random
n=1
while n <= 3:
    i = random.randint(0, 9)
    print(i, end=" ")
    n += 1
print()
n = 1
while n <= 4:
    i = random.randint(0, 9)
    print(i, end=" ")
    n += 1
