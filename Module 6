# Uusing random list

import random
def sum_of_num(numbers):
    print(numbers)
    print(f"The sum of all the numbers is {sum(numbers)}")


numbers = []
for n in range (1, 6):
    i = random.randint(1, 10)
    numbers.append(i)
sum_of_num(numbers)

# OR

import random


def sum1(list):
    summa = 0
    for i in list:
        summa += i
    print(f"The sum is {summa}")
    return

list = []
for n in range(5):
    i = random.randint(1, 10)
    list.append(i)
print(list)
sum1(list)



5.

import random

def cut_down(list):
    new_list = []
    for i in list:
        if i % 2 == 0:
            new_list.append(i)
    print(new_list)
    return


list = []
for n in range(20):
    lus = random.randint(1, 50)
    list.append(lus)
print(list)
cut_down(list)



6. 


import math

def calculate(diameter, price):
    area = 2 * math.pi * ((diameter/2)**2)
    price_per_unit = price / area
    print(f"The price per unit is {price_per_unit:.5f}")
    return price_per_unit

diameter1 = float(input("Enter the 1st pizza's diameter: "))
price1 = float(input("Enter the 1st pizza's price: "))
diameter2 = float(input("Enter the 2nd pizza's diameter: "))
price2 = float(input("Enter the 2nd pizza's price: "))
if calculate(diameter1, price1) > calculate(diameter2, price2):
    print("The pizza is more expensive, go for the second option.")
else:
    print("Buy the first pizza.")
