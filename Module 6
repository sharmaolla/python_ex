import random
def dice():
   num = random.randint(1, user_wish)
   print(num)
   return num

user_wish =int(input("How many side dice?: "))
while dice() != user_wish:
    dice
else:
    print(f"Oh! We got {user_wish}")


3.

def converter(gallon):
    litre = gallon * 3.79
    print(f"{gallon} gallons is equal to {litre:.2f} litres")
    return

gallon = float(input("Enter the value in gallons: "))
while gallon >= 0:
    converter(gallon)
    break
else:
    print("Invalid value.")


